<% include ./partials/header.ejs %>

  <body>
    <div class="container">
      <h1>Bearer Token Generator</h1>

      <form action="/generate-token" method="POST">
        <input type="text" name="publicKey" placeholder="Consumer Key" />
        <input type="text" name="secretKey" placeholder="Consumer Secret Key" />
        <input
          class="btn waves-effect waves-light"
          type="submit"
          name="submit"
          value="Submit"
        />
      </form>
      
      <% if (bearerToken !== undefined) { %>
      <div>
        <p><%= bearerToken %></p>
      </div>
      <% } %>
    </div>
  </body>
</html>